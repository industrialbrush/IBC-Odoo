<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add link to CSS to overide the clean layout style. -->
    <template id="report_assets_common_inherit_ibc" inherit_id="web.report_assets_common" name="Report Assets IBC">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text/scss" href="/ibc_sale_report/static/src/scss/ibc_report.scss"/>
        </xpath>
    </template>

    <template id="external_layout_ibc">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>
        <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style" style="position:relative; margin-bottom:5px;">
            <div class="row header-alignment">
                <div class="col-3 mb4">
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" width='120' height='75' alt="Logo"/>
                </div>
                <div class="col-9 text-right;" style="margin-top:22px;" t-field="company.report_header" name="moto"/>
                <div style="font-size:22px" class="col-6 text-center">
                    <strong>SALES ORDER - <span t-esc="o.name"/></strong>
                </div>
                <div style="font-size:22px; width:25%;" class="text-right">
                    <strong><span t-field="o.partner_id.group"/></strong>
                </div>
                
            </div>
            <!-- <div t-if="company.logo or company.report_header" class="row zero_min_height">
                <div class="col-12">
                    <div style="border-bottom: 1px solid black;"/>
                </div>
            </div> -->
            <div class="row">
                <div style='font-size: 14px;margin-left:5px;' class="col-6" name="company_address">
                    <div t-field="company.partner_id"
                        t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'
                    />
                </div>
                <div style='font-size: 14px;position:absolute; top:40px;z-index:10; left:350px;' class="col-6">
                    <div><strong>Date:</strong> <span t-field="o.date_order"/></div>
                    <div><strong>Customer:</strong> <span t-esc="o.partner_id.name"/></div>
                    <div><strong>PO: </strong><span t-field="o.client_order_ref"/></div>
                    <!-- <div><strong>Contact:</strong> <span t-field="o.partner_id.email"/></div> -->
                    <div><strong>Email:</strong> <span t-field="o.partner_id.email"/></div>
                    <div class="row" style="width:100%;margin-left:1px;"><div style="margin-left:0;width:50%;"><strong>Phone:</strong> <span t-field="o.partner_id.phone"/></div> <div class="text-right" style="margin-right:0;width:50%;"> <strong>Fax:</strong> <span t-esc="o.partner_id.fax"/></div></div>
                </div>
            </div>
        </div>

        <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout"  t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <div class="pt-5">
                <!-- This div ensures that the address is not cropped by the header. -->
                <t t-call="web.address_layout"/>
            </div>
            <t t-raw="0"/>
        </div>

        <!-- <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
            <div class="text-center" style="border-top: 1px solid black;">
                <ul class="list-inline mb4">

                    <li t-if="company.phone" class="list-inline-item d-inline"><span class="o_force_ltr" t-field="company.phone"/></li>
                    <li t-if="company.email" class="list-inline-item d-inline"><span t-field="company.email"/></li>
                    <li t-if="company.website" class="list-inline-item d-inline"><span t-field="company.website"/></li>
                    <li t-if="company.vat" class="list-inline-item d-inline"><t t-esc="company.country_id.vat_label or 'Tax ID'"/>: <span t-field="company.vat"/></li>
                </ul>

                <div name="financial_infos">
                    <span t-field="company.report_footer"/>
                </div>

                <div t-if="report_type == 'pdf'" class="text-muted">
                    Page: <span class="page"/> / <span class="topage"/>
                </div>
            </div> -->
        <!-- </div> -->

        
    </template>
</odoo>