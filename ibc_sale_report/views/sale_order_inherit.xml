<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_form_inherit_ibc" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.ibc</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_shipping_id" position="after">
                <field name='fob'/>
                <field name="ship_via"/>
            </field>
            <xpath expr="//field[@name='order_line']//tree/field[@name='name']" position="after">
                <field name="due_date" optional="1"/>
                <field name="delivery_tolerance" optional="1"/>
                <field name="customer_part_number"/>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='other_information']/group[2]" position="after">
                <group name="remarks_group">
                <field name="remarks" string="Remarks"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>